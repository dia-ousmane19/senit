    <div class="d-flex flex-column justify-content-center align-items-center">
      <div class="">
        <h1 class="text-center text-white text-uppercase">{{servicesComplet.services }}  {{servicesComplet.textMuted}}</h1>
      </div>
    </div>
  </div>
</div>
<div class="container mb-4">
  <hr class="featurette-divider">
  <h1 class="text-center">{{servicesComplet.services }} <span class="text-muted">{{servicesComplet.textMuted}}</span></h1>
  <hr class="featurette-divider">
  <div class="row">
